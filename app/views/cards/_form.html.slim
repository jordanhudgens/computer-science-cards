= form_for(card) do |f|
  - if card.errors.any?
    #error_explanation
      h2
        = pluralize(card.errors.count, "error")
        | prohibited this card from being saved:
      ul
        - card.errors.full_messages.each do |message|
          li= message
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :birthday
    = f.date_select :birthday
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :icon
    = f.text_area :icon
  .field
    = f.label :front_image
    = f.text_area :front_image
  .field
    = f.label :back_thumb
    = f.text_area :back_thumb
  .actions
    = f.submit
